
<h1>Title: <%= @post.title%></h1>
<h3>Content: <%= @post.content%></h3>
<h3>Categories: <%= @post.categories.map(&:name).join(' ') %></h3>
<h3>Comments:</h3>
<%= form_for @post.comments.build do |f|%>

  <%= f.hidden_field :post_id %>


   <%= f.fields_for :comments, @post.comments.build do |comment_fields|%>
      <%= comment_fields.label :content, "New Comment" %>
      <%= comment_fields.text_area :content %>
   <% end %>

   <ul><% @post.comments.each do |comment|%>
      <li><%= comment.user%> says: <%=comment.content%></li>
   <%end%>

   <%=f.submit "Create Comment"%>
<%end%>
 
</ul>


